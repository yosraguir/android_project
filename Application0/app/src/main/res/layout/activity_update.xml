<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0099ff"  />
    <View
        android:id="@+id/wave_view_update"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/wave" />
    <TextView
        android:id="@+id/tv_acceuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:textSize="36sp"
        android:textStyle="bold"
         />


    <TextView
        android:id="@+id/tv_recherche_update"
        android:layout_width="match_parent"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:textColor="#070707"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ed_recherche_update"
        android:layout_width="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:inputType="textPersonName"
        android:padding="16dp" />

    <TextView
        android:id="@+id/prenom_update"
        android:layout_width="match_parent"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:layout_height="wrap_content"
        android:text="Prenom"
        android:textColor="#070707"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ed_prenom_ajout_update"

        android:layout_width="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:inputType="textPersonName"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/numero_update"
        android:layout_width="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_height="wrap_content"
        android:text="Numero"
        android:textColor="#070707"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/ed_numero_ajout_update"
        android:layout_width="match_parent"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_border"
        android:inputType="number"
        android:padding="16dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal">
    <Button
        android:id="@+id/btn_valider_ajout_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bt"
        android:padding="16dp"
        android:text="Modifier"
        android:layout_marginRight="15dp"
        app:backgroundTint="#2196F3" />

    <Button
        android:id="@+id/btn_quiter_ajout_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bt"
        android:padding="16dp"
        android:text="Quitter"
        app:backgroundTint="#2196F3" />
</LinearLayout>

</LinearLayout>